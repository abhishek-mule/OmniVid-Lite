# ===========================================
# OmniVid Lite - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# APPLICATION SETTINGS
# ===========================================
DEBUG=false
LOG_LEVEL=INFO
LOGS_DIR=logs

# ===========================================
# LLM CONFIGURATION
# ===========================================
# Set to true to use local Ollama, false for OpenAI
USE_LOCAL_LLM=true

# Ollama settings (if using local LLM)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=deepseek-r1:7b

# OpenAI settings (fallback or primary if USE_LOCAL_LLM=false)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
# Set to true to require API keys for all endpoints
REQUIRE_API_KEY=false
API_KEY_HEADER=X-API-Key

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ===========================================
# CORS SETTINGS
# ===========================================
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# ===========================================
# REMOTION SETTINGS
# ===========================================
REMOTION_CMD=npx remotion
REMOTION_TIMEOUT=300

# ===========================================
# REDIS SETTINGS (for queue and caching)
# ===========================================
REDIS_URL=redis://localhost:6379

# ===========================================
# DATABASE SETTINGS (if using PostgreSQL)
# ===========================================
# DATABASE_URL=postgresql://user:password@localhost/omnivid

# ===========================================
# DEVELOPMENT NOTES
# ===========================================
# - All boolean values should be 'true' or 'false' (lowercase)
# - URLs should include protocol (http:// or https://)
# - API keys should be kept secure and not committed to version control
# - For production, set DEBUG=false and LOG_LEVEL=WARNING or ERROR
# - Rate limits are per client IP address
# - CORS origins should be specific domains in production